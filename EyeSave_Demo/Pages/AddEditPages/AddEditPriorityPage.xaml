<Page x:Class="EyeSave_Demo.Pages.AddEditPages.AddEditPriorityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EyeSave_Demo.Pages.AddEditPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPriorityPage">

    <StackPanel Orientation="Vertical" Margin="0,200,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Приоритет: "/>
            <TextBox x:Name="PriorityTb" Width="60" PreviewTextInput="PriorityTb_PreviewTextInput"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="SaveChangesBtn" Click="SaveChangesBtn_Click" Width="150" Height="20" Margin="5" Content="Изменить"/>
            <Button x:Name="BackBtn" Click="BackBtn_Click" Width="150" Height="20" Margin="5" Content="Назад"/>
        </StackPanel>
    </StackPanel>
</Page>
