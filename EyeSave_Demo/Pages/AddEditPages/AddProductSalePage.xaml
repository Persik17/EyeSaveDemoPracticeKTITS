<Page x:Class="EyeSave_Demo.Pages.AddEditPages.AddProductSalePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EyeSave_Demo.Pages.AddEditPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProductSalePage">

    <StackPanel Orientation="Vertical" Margin="0,200,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100">
        <ComboBox x:Name="SaleCb" DisplayMemberPath="Title" IsEditable="True" IsTextSearchEnabled="True" Width="200" Margin="0,10,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="AddSaleBtn" Click="AddSaleBtn_Click" Width="100" Height="30" Margin="5" Content="Добавить"/>
            <Button x:Name="BackBtn" Click="BackBtn_Click" Width="100" Height="30" Margin="5" Content="Назад"/>
        </StackPanel>
    </StackPanel>
</Page>
